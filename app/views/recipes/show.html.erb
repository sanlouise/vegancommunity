<p id="notice"><%= notice %></p>

<%= link_to "Back to All Recipes", recipes_path, class: "waves-effect waves-light btn" %>

<h1><%= @recipe.title %></h1>

<div class="row">
  <div class="col s12">
    <div class="col s12 m5">
      <%= image_tag(@recipe.image.url, size: "400x400") %>
    </div>
    
    <div class="col s12 m6 offset-m1">
      <h4>This is what makes this recipe awesome.</h4>
      <%= @recipe.description %>
      
    </div>
  </div>
</div>
<div class="row">
  <div class="col s12">
    <hr />
    <div class="col s12 m7">
      <div class="boxed">
        <h4>Let's get to it!</h4>
        <%= @recipe.directions %>
      </div>
    </div>
    
    <div class="col s12 m5">
      <div class="boxed">
        <h4>Ingredients</h4>
        <%= @recipe.ingredients %>
      </div>
    </div>
    
    
  </div>
</div>




<%= link_to 'Edit', edit_recipe_path(@recipe) %> |
<%= link_to 'Back', recipes_path %>
