<div class="container">
  <!--   Icon Section   -->
    <% @lifestyle_posts.each do |post| %>
    <hr/>
    <div class="row">
      
      <div class="col s12 m6">
        <h3 class="center"><%= post.title %></h3>
        <p><%= post.body %></p>
      </div>

      <div class="col s12 m6">
        <%= link_to lifestyle_post_path(post) do %>
          <%= image_tag(Image.where(imageable: @post.image), class: "responsive-img z-depth-2 center") %>
        <% end %>
      </div>
      
    </div>
    <% end %>
  </div>
</div>



<%= link_to 'New Lifestyle post', new_lifestyle_post_path %>