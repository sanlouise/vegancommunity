<div class="container">
  <div class="section">
    <!--   Icon Section   -->
    <div class="row">
      <div class="col s12">
        <div class="icon-block">

          <!--Header portfolio-->
          <h2 class="center brown-text">Conscioux</h2>
          <h5 class="center"></h5>
          <p class="light center">Best resources </p>

          <!--Iterate through Projects-->
          <% @lifestyle_posts.each do |post| %>
            <hr/>
            <div class="row">
              <div class="col s12">
                <div class="col s12 l7">
                  <!--Project Title-->
                  <h3 class="center"><%= post.title %></h3>
                  <!--Project Description-->
                  <p><%= post.body %></p>
                  <!--GitHub link-->
              
                </div>
                
                <!--Project Image-->
                <div class="col s12 l5">
                  <%= link_to lifestyle_post_path(post) do %>
                    <%= image_tag(post.image, class: "responsive-img z-depth-2 center") %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
            
        </div>
      </div>
    </div>
  </div>
</div>



<%= link_to 'New Lifestyle post', new_lifestyle_post_path %>
