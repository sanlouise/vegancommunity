<%= form_for(@lifestyle_post) do |f| %>
  <% if @lifestyle_post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@lifestyle_post.errors.count, "error") %> prohibited this lifestyle_post from being saved:</h2>

      <ul>
      <% @lifestyle_post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input-field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  
  <div class="input-field">
    <%= f.label :body %><br>
    <%= f.text_area :body, class: "materialize-textarea" %>
  </div>
  
  <div class="file-field input-field">
    <div class="btn">
      <span>Image</span>
      <input type="file" multiple>
      <%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png' %>
    </div>
    <div class="file-path-wrapper">
      <input class="file-path validate" type="text" placeholder="Upload an image">
    </div>
  </div>
  
  <div class="input-field">
    <%= f.label :lifestyle_tag %><br>
    <%= f.text_field :lifestyle_tag %>
  </div>
  
  <div class="actions center">
    <%= f.submit class: "btn waves-effect waves-light" %>
  </div>
  
<% end %>

<script type="text/javascript">
  $('#recipe_picture').bind('change', function() {
    size_in_megabytes = this.files[0].size/1024 /1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 1MB. Please choose a smaller file.')
    }
  });
</script>